-- variables

-- player table
plr={
	-- x and y coords
 x=64,
 y=104,
	-- delta x and y
 dx=0,
 dy=0,
	-- direction player facing
 flipped=false,
	-- horizontal speed
 speed=1,
	-- initial jump force
 jump_force=-5,
 -- can player jump?
 can_jump=true,
 attacking=false,
 attack_speed=5,
 sprite=5,
 passive_sprite=5,
 first_attack_frame=6,
 last_attack_frame=7,
 attack_timer=0
}

-- environment table
env={
 -- gravity
 g=0.5,
 start_time=0,
 wait_time=0
}

-- enemy_1 table
enemy_1={
	x=120,
	y=104,
	dx=1,
	sprite=8,
	flipped=false
}

-- enemy_2 table
enemy_2={
	x=312,
	y=104,
	dx=1,
	sprite=8,
	flipped=false
}
